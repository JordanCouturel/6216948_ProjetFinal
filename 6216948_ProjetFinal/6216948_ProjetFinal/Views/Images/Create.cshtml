@model ImageUploadVM

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <div class="form-group">
        <label asp-for="@Model.Image.Nom" class="control-label"></label>
        <input asp-for="@Model.Image.Nom" class="form-control" />
        <span asp-validation-for="@Model.Image.Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FormFile">Fichier image : </label>
        <input id="FormFile" name="FormFile" type="file" accept="image/" class="form-control-file" /> <span asp-validation-for="@Model.FormFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" onsubmit="Create(@Model)" value="Create" class="btn btn-primary" />
    </div>
</form>