@model ImageUploadVM

<div class="container my-5">
    <h1 class="text-center">Créer/Importer une image</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.Image.Nom" class="control-label">Nom de l'image</label>
                    <input asp-for="@Model.Image.Nom" class="form-control" />
                    <span asp-validation-for="@Model.Image.Nom" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="FormFile">Fichier image</label>
                    <input id="FormFile" name="FormFile" type="file" accept="image/" class="form-control-file" />
                    <span asp-validation-for="@Model.FormFile" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>
